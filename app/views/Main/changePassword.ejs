<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <title>Change Password - Creo Automation</title>
    <link rel="shortcut icon" href="/public/assets/images/SAI-Logo.JPG">

    <link href="/public/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="/public/assets/css/metismenu.min.css" rel="stylesheet" type="text/css">
    <link href="/public/assets/css/icons.css" rel="stylesheet" type="text/css">
    <link href="/public/assets/css/style.css" rel="stylesheet" type="text/css">
    <style>
      .page-container { padding: 24px 16px; max-width: 720px; margin: 0 auto; }
    </style>
</head>
<body>
<div id="wrapper">
  <%- include('../partials/header') %>
  <%- include('../partials/sidebar') %>

  <div class="content-page">
    <div class="content">
      <div class="container-fluid">
        <div class="page-container">
          <div class="mb-4">
            <h1 class="m-0">Change Password</h1>
            <% if (error) { %>
              <div class="alert alert-danger mt-3"><%= error %></div>
            <% } %>
            <% if (message) { %>
              <div class="alert alert-success mt-3"><%= message %></div>
            <% } %>
          </div>

          <div class="card">
            <div class="card-body">
              <form id="changePwdForm" method="post" action="/profile/change-password">
                <div class="form-group">
                  <label>Current Password</label>
                  <input type="password" name="currentPassword" id="currentPassword" class="form-control" required />
                </div>
                <div class="form-group">
                  <label>New Password</label>
                  <input type="password" name="newPassword" id="newPassword" class="form-control" required />
                </div>
                <div class="form-group">
                  <label>Confirm New Password</label>
                  <input type="password" name="confirm" id="confirm" class="form-control" required />
                </div>
                <div class="mt-3">
                  <button class="btn btn-primary" type="submit">Change Password</button>
                  <a href="/profile" class="btn btn-link">Back to profile</a>
                </div>
              </form>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

<script>
  (function(){
    var form = document.getElementById('changePwdForm');
    if(!form) return;
    form.addEventListener('submit', function(e){
      var newPwd = document.getElementById('newPassword') ? document.getElementById('newPassword').value || '' : document.getElementById('newPassword') && document.getElementById('newPassword').value || '';
      // fallback to name-based lookup
      if (!newPwd) newPwd = document.querySelector('input[name="newPassword"]') ? document.querySelector('input[name="newPassword"]').value : document.getElementById('newPassword') ? document.getElementById('newPassword').value : '';
      var confirm = document.getElementById('confirm') ? document.getElementById('confirm').value || '' : document.querySelector('input[name="confirm"]') ? document.querySelector('input[name="confirm"]').value : '';
      if (newPwd.length < 8) { e.preventDefault(); alert('New password must be at least 8 characters.'); return; }
      if (newPwd !== confirm) { e.preventDefault(); alert('Password and confirmation do not match.'); return; }
    });
  })();
</script>

<%- include('../partials/scripts') %>

</body>
</html>
