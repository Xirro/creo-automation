                                        <% const safeStatusByPair = JSON.stringify(_statusByPairObj).replace(/</g, '\u003c').replace(/'/g, '&#39;'); %>
                                        <% const safeAllMfg = JSON.stringify(_mfgs).replace(/</g, '\u003c').replace(/'/g, '&#39;'); %>
                                        <% const safeAllStatus = JSON.stringify(Array.from(_allStatusSet).sort()).replace(/</g, '\u003c').replace(/'/g, '&#39;'); %>

