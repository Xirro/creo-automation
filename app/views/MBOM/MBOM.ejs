<!-- DataTables JS (load after jQuery which is included in header.ejs) -->
<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function() {
        var mbomTable = $('#mbomSumTable').DataTable({
            "scrollCollapse": true,
            "paging": true,
            "pagingType": "simple",
            "responsive": true,
            "scrollX": true,
            "pageLength": 7,
            "lengthChange": false,
            "dom": 'lrtip' // remove built-in filter input (we use the inline header search)
        });

        // Wire the inline header search to DataTables (external filter)
        // Use debounced `input` events and avoid `change` (which fires on blur).
        // If `change` triggers a redraw while the user is clicking an Open link,
        // the redraw can replace the clicked DOM node and cancel navigation —
        // causing the need to click twice. Debouncing prevents that.
        (function(){
            var searchTimer = null;
            $('#mbomSearch').on('input', function() {
                var val = this.value;
                if (searchTimer) clearTimeout(searchTimer);
                searchTimer = setTimeout(function(){
                    mbomTable.search(val).draw();
                }, 180);
            });
        })();

        // Initialize common items table and wire up filters
        var comTable = $('#mbomComItemTable').DataTable({
            "scrollCollapse": true,
            "paging": true,
            "pagingType": "simple",
            "pageLength": 10,
            "dom": 'lrtip' // remove built-in filter input; we use the inline `#comItemSearch` next to filters
        });

        // Debounced search input for common items table
        (function(){
            var comTimer = null;
            $('#comItemSearch').on('input', function(){
                var val = this.value || '';
                if (comTimer) clearTimeout(comTimer);
                comTimer = setTimeout(function(){
                    comTable.search(val).draw();
                }, 180);
            });
        })();

        // small helper to escape user input for regex-based column search
        function escapeRegex(val) {
            return val.replace(/[-\/\\^$*+?.()|[\]{}]/g, '\\$&');
        }

        // parse server-side mapping data for cascading selects
        var filtersData = (function(){
            var el = document.getElementById('filters-data');
            if (!el) return null;
            try {
                return {
                    mfgByType: JSON.parse(el.getAttribute('data-mfg-by-type') || '{}'),
                    statusByPair: JSON.parse(el.getAttribute('data-status-by-pair') || '{}'),
                    allMfg: JSON.parse(el.getAttribute('data-all-mfg') || '[]'),
                    allStatus: JSON.parse(el.getAttribute('data-all-status') || '[]')
                };
            } catch (e) { console.warn('Failed to parse filters-data', e); return null; }
        })();

        function populateSelect($sel, items, includeEmpty, emptyLabel, currentVal) {
            $sel.empty();
            var label = (typeof emptyLabel !== 'undefined' && emptyLabel !== null) ? emptyLabel : 'All';
            if (includeEmpty) $sel.append($('<option>').attr('value','').text(label));
            for (var i = 0; i < items.length; i++) {
                var v = items[i];
                var $opt = $('<option>').attr('value', v).text(v);
                $sel.append($opt);
            }
            if (currentVal) $sel.val(currentVal);
        }

        function updateMfgOptions(type) {
            var $mfg = $('#comItemMfgFilter');
            if (!filtersData) return;
            if (!type) {
                populateSelect($mfg, filtersData.allMfg || [], true, 'All Manufacturers');
                return;
            }
            var list = filtersData.mfgByType && filtersData.mfgByType[type] ? filtersData.mfgByType[type] : [];
            populateSelect($mfg, list, true, 'All Manufacturers');
        }

        function updateStatusOptions(type, mfg) {
            var $st = $('#comItemStatusFilter');
            if (!filtersData) return;
            var statuses = new Set();
            if (type && mfg) {
                var key = type + '||' + mfg;
                (filtersData.statusByPair[key] || []).forEach(function(s){ statuses.add(s); });
            } else if (type) {
                var mlist = filtersData.mfgByType && filtersData.mfgByType[type] ? filtersData.mfgByType[type] : [];
                for (var i = 0; i < mlist.length; i++) {
                    var key2 = type + '||' + mlist[i];
                    (filtersData.statusByPair[key2] || []).forEach(function(s){ statuses.add(s); });
                }
            } else if (mfg) {
                // any type with this mfg
                Object.keys(filtersData.mfgByType || {}).forEach(function(t){
                    if ((filtersData.mfgByType[t] || []).indexOf(mfg) !== -1) {
                        var key3 = t + '||' + mfg;
                        (filtersData.statusByPair[key3] || []).forEach(function(s){ statuses.add(s); });
                    }
                });
            } else {
                (filtersData.allStatus || []).forEach(function(s){ statuses.add(s); });
            }
            var arr = Array.from(statuses).sort();
            populateSelect($st, arr, true, 'All Statuses');
        }

        // initialize cascading selects state
        if (filtersData) {
            updateMfgOptions($('#comItemTypeFilter').val());
            updateStatusOptions($('#comItemTypeFilter').val(), $('#comItemMfgFilter').val());
        }

        // Status filter: exact match on the Status column (zero-based index 6 in the table)
        $('#comItemStatusFilter').on('change', function(){
            var v = $(this).val() || '';
            if (!v) {
                comTable.column(6).search('').draw();
            } else {
                comTable.column(6).search('^' + escapeRegex(v) + '$', true, false).draw();
            }
        });

        // Item Type filter (column index 1) — update Manufacturer and Status cascading lists
        $('#comItemTypeFilter').on('change', function(){
            var v = $(this).val() || '';
            // update manufacturer options based on selected type
            try { updateMfgOptions(v); } catch (e) { console.warn(e); }
            // reset manufacturer selection after type change (user can pick a new one)
            $('#comItemMfgFilter').val('');
            // update status options for the new selection
            try { updateStatusOptions(v, ''); } catch (e) { console.warn(e); }
            if (!v) {
                comTable.column(1).search('').draw();
            } else {
                comTable.column(1).search('^' + escapeRegex(v) + '$', true, false).draw();
            }
        });

        // Manufacturer filter (column index 2) — update Status cascading list
        $('#comItemMfgFilter').on('change', function(){
            var v = $(this).val() || '';
            var curType = $('#comItemTypeFilter').val() || '';
            try { updateStatusOptions(curType, v); } catch (e) { console.warn(e); }
            if (!v) {
                comTable.column(2).search('').draw();
            } else {
                comTable.column(2).search('^' + escapeRegex(v) + '$', true, false).draw();
            }
        });
    });
</script>

