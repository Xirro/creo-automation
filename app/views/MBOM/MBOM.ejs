                                        <% // build unique lists and mapping for cascading filters %>
                                        <% const _typeSet = new Set(); const _mfgSet = new Set(); %>
                                        <% const _mfgByType = {}; const _statusByPair = {}; const _allStatusSet = new Set(); %>
                                        <% for (let it of (comItemData || [])) {
                                            if (!it) continue;
                                            const t = it.itemType || '';
                                            const m = it.itemMfg || '';
                                            const s = it.status || '';
                                            if (t) _typeSet.add(t);
                                            if (m) _mfgSet.add(m);
                                            if (t) {
                                                if (!_mfgByType[t]) _mfgByType[t] = new Set();
                                                if (m) _mfgByType[t].add(m);
                                            }
                                            const key = (t || '') + '||' + (m || '');
                                            if (!_statusByPair[key]) _statusByPair[key] = new Set();
                                            if (s) {
                                                _statusByPair[key].add(s);
                                                _allStatusSet.add(s);
                                            }
                                        } %>
                                        <% const _types = Array.from(_typeSet).sort(); const _mfgs = Array.from(_mfgSet).sort(); %>
                                        <% const _mfgByTypeObj = {}; for (let k of Object.keys(_mfgByType)) _mfgByTypeObj[k] = Array.from(_mfgByType[k]).sort(); %>
                                        <% const _statusByPairObj = {}; for (let k of Object.keys(_statusByPair)) _statusByPairObj[k] = Array.from(_statusByPair[k]).sort(); %>
